{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@landing/*": ["packages/landing/src/*"],
      "@auth/*": ["packages/auth/src/*"],
      "@home/*": ["packages/home/src/*"],
      "@notesharing/*": ["packages/features/notesharing/src/*"],
      "@qna/*": ["packages/features/qna/src/*"],
      "@groupchat/*": ["packages/features/groupchat/src/*"],
      "@summarizer/*": ["packages/features/summarizer/src/*"],
      "@quiz/*": ["packages/features/quiz/src/*"],
      "@chat_bot/*": ["packages/features/chat_bot/src/*"],
      "@shared/*": ["packages/shared/src/*"]
